/* pages/TableBlue/index.wxss */

page {
  background-color: #f9f6ef;
}

.container {
  margin: 0;
  padding: 0;
}

.header_area {
  position: relative;
  text-align: center;
  width: 100%;
}

.header_area h2 {
  font-size: 28px;
  letter-spacing: 2rpx;
  color: #373744;
}

.setting {
  position: absolute;
  right: 0;
  display: inline-block;
}

.svg_icon-inner {
  width: 80rpx;
  height: 80rpx;
}

/* 第二部分 */
.second_area {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-top: 52rpx;
}

.second_svg_icon {
  width: 140rpx;
  height: 140rpx;
  padding: 0 78rpx;
}

.item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 第三部分 */
.third_area{
  margin-top: 90rpx;
  transform: scale(1.3);
}
.button-group {
  padding-top: 20rpx;
  width: 360rpx;
  height: 360rpx;
}
.outter-circle {
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap ;
  margin-left: 10rpx;
  width: 325rpx;
  height: 325rpx;
  background-color: #EBDAC9;
  border-radius: 100%;
  overflow: hidden;
  transform-origin: center;
  transform: rotate(45deg);
  border: 1rpx solid;
}
.inner-parts {
  width: 160rpx;
  height: 160rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.inner-parts:nth-child(4){
  border-left: 1rpx solid;
  border-top: 1rpx solid; 
}
.inner-parts:nth-child(1){
  border-right: 1rpx solid;
  border-bottom: 1rpx solid;
}
.part3_svg{
  width: 50rpx;
  height: 50rpx;
}
